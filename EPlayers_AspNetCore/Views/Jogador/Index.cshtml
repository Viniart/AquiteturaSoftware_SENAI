@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")' class="cadastro">

    <div class="campo">
        <label for="ID Jogador">ID Jogador</label>
        <input type="text" name="IdJogador">
    </div>

    <div class="campo">
        <select name="IdEquipe">
            @foreach (Equipe e in ViewBag.Equipes)
            {
                <option value="{e.IdEquipe}">{e.Nome}</option>
            }
        </select>
    </div>

    <div class="campo">
        <label for="Nome">Nome</label>
        <input type="text" name="Nome">
    </div>

    <div class="campo">
        <label for="Email">Email</label>
        <input type="text" name="Email">
    </div>

    <div class="campo">
        <label for="Senha">Senha</label>
        <input type="password" name="Senha">
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Equipe</th>
    </thead>
    <tbody>
        @foreach (Jogador j in ViewBag.Jogadores)
        {
            <tr>
                <td>@j.IdJogador</td>
                <td>@j.Nome</td>
                <td>@j.Email</td>
                <td>@j.IdEquipe</td>
            </tr>
        }
    </tbody>
</table>